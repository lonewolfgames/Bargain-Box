.container
  #nav
    #user-nav
      - if box_user_signed_in?
        = link_to t('sign_out'), destroy_box_user_session_path, { method: :delete, type: "button", class: "btn btn-primary" }
        = link_to t('profile'), edit_box_user_registration_path, { type: 'button', class: 'btn btn-primary' }
      - else
        = link_to t('sign_up'), new_box_user_registration_path, { type: 'button', class: 'btn btn-primary'}
        = link_to t('sign_in'), new_box_user_session_path, { type: 'button', class: 'btn btn-primary'}
