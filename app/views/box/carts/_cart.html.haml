- view ||= :table

- case view
- when :table
  %tr
    %td= cart.title
    %td
      = link_to I18n.t('actions.edit'), [:edit, cart]
      = link_to t('actions.show'), [cart]
      = link_to t('actions.delete'), [cart], method: :delete, data: { confirm: t('action_check') }
- when :list
  %li
    = link_to cart.title, [cart]