{
	"manifest_version": 2,
	
	"name": "Bargin Box",
	"description": "helps keep your shopping organized",
	"version": "1.0",
	
	"permissions": [
		"*://*/*",
		"tabs",
		"clipboardWrite",
		"contextMenus",
		"cookies",
		"notifications",
		"webRequest",
		"webRequestBlocking"
	],
	
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "index.html"
	}
}